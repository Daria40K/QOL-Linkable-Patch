<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!--
		========== __TemplatePowerMod__ ==========

		Eccentric_FusionGenerator | #power
	-->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>__TemplatePowerMod__</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
                <!-- Eccentric_FusionGenerator -->
				<li Class="PatchOperationConditional">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="Eccentric_FusionGenerator"]/building</xpath>
                    <match Class="PatchOperationConditional">
                        <success>Always</success>
                        <xpath>Defs/ThingDef[defName="Eccentric_FusionGenerator"]/building/relatedBuildCommands</xpath>
                        <nomatch Class="PatchOperationAdd">
                            <success>Always</success>
                            <xpath>Defs/ThingDef[defName="Eccentric_FusionGenerator"]/building</xpath>
                        <value>
                            <relatedBuildCommands>

                            </relatedBuildCommands>
                        </value>
                        </nomatch>
                    </match>
                    <nomatch Class="PatchOperationAdd">
                        <success>Always</success>
                        <xpath>Defs/ThingDef[defName="WoodFiredGenerator" or defName="ChemfuelPoweredGenerator" or defName="WindTurbine" or defName="SolarGenerator" or defName="GeothermalGenerator" or defName="WatermillGenerator"]</xpath>
                        <value>
                            <building>
                                <relatedBuildCommands>

                                </relatedBuildCommands>
                            </building>
                        </value>
                    </nomatch>
                </li>


                <!-- ========== RimWorld ========== -->
                <!-- Eccentric_FusionGenerator -->
				<li Class="PatchOperationAdd">
					<success>Always</success>
					<xpath>Defs/ThingDef[defName="Eccentric_FusionGenerator"]/building/relatedBuildCommands</xpath>
					<value>
						<li>PowerConduit</li>
                        <li>WaterproofConduit</li>
					</value>
				</li>

                <!-- ========== Glitter Tech ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Glitter Tech</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
                            <!-- Eccentric_FusionGenerator -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>Defs/ThingDef[defName="Eccentric_FusionGenerator"]/building/relatedBuildCommands</xpath>
								<value>
									<li>HeavyPowerConduit</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

				<!-- ========== Backup Power ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Backup Power</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
                            <!-- Eccentric_FusionGenerator -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>Defs/ThingDef[defName="Eccentric_FusionGenerator"]/building/relatedBuildCommands</xpath>
								<value>
									<li>BackupPower_Attachment</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

				<!-- ========== GlitterNet ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>GlitterNet</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
                            <!-- Eccentric_FusionGenerator -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>Defs/ThingDef[defName="Eccentric_FusionGenerator"]/building/relatedBuildCommands</xpath>
								<value>
									<li>GNBasicPowerIntegrator</li>
                                    <li>GNImprovedPowerIntegrator</li>
                                    <li>GNAdvancedPowerIntegrator</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>