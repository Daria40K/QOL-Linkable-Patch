<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!--
		========== Cybernetic Storm ==========

		CS_NanoGenerator
	-->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Cybernetic Storm</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
                <!-- CS_NanoGenerator -->
                <li Class="PatchOperationConditional">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="CS_NanoGenerator"]/building</xpath>
                    <match Class="PatchOperationConditional">
                        <success>Always</success>
                        <xpath>Defs/ThingDef[defName="CS_NanoGenerator"]/building/relatedBuildCommands</xpath>
                        <nomatch Class="PatchOperationAdd">
                            <success>Always</success>
                            <xpath>Defs/ThingDef[defName="CS_NanoGenerator"]/building</xpath>
                        <value>
                            <relatedBuildCommands>

                            </relatedBuildCommands>
                        </value>
                        </nomatch>
                    </match>
                    <nomatch Class="PatchOperationAdd">
                        <success>Always</success>
                        <xpath>Defs/ThingDef[defName="CS_NanoGenerator"]</xpath>
                        <value>
                            <building>
                                <relatedBuildCommands>

                                </relatedBuildCommands>
                            </building>
                        </value>
                    </nomatch>
                </li>

                <!-- ========== RimWorld ========== -->
                <!-- CS_NanoGenerator -->
				<li Class="PatchOperationAdd">
					<success>Always</success>
					<xpath>Defs/ThingDef[defName="CS_NanoGenerator"]/building/relatedBuildCommands</xpath>
					<value>
						<li>PowerConduit</li>
                        <li>WaterproofConduit</li>
					</value>
				</li>

				<!-- ========== Cybernetic Storm ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Cybernetic Storm</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<!-- CS_NanoGenerator -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>Defs/ThingDef[defName="CS_NanoGenerator"]/building/relatedBuildCommands</xpath>
								<value>
									<li>CS_PowerConduit</li>
									<li>WaterproofUltrasteelConduit</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

                <!-- ========== Glitter Tech ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Glitter Tech</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
                            <!-- CS_NanoGenerator -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>Defs/ThingDef[defName="CS_NanoGenerator"]/building/relatedBuildCommands</xpath>
								<value>
									<li>HeavyPowerConduit</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

				<!-- ========== Backup Power ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Backup Power</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
                            <!-- CS_NanoGenerator -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>Defs/ThingDef[defName="CS_NanoGenerator"]/building/relatedBuildCommands</xpath>
								<value>
									<li>BackupPower_Attachment</li>
								</value>
							</li>
						</operations>
					</match>
				</li>

				<!-- ========== GlitterNet ========== -->
				<li Class="PatchOperationFindMod">
					<mods>
						<li>GlitterNet</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
                            <!-- CS_NanoGenerator -->
							<li Class="PatchOperationAdd">
								<success>Always</success>
								<xpath>Defs/ThingDef[defName="CS_NanoGenerator"]/building/relatedBuildCommands</xpath>
								<value>
									<li>GNBasicPowerIntegrator</li>
                                    <li>GNImprovedPowerIntegrator</li>
                                    <li>GNAdvancedPowerIntegrator</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>